#!/usr/bin/env bash
# Script: apiAutomation-0x00
# Objective: Automate API request to the Pokémon API for Pikachu
# Saves successful response to data.json
# Logs errors to errors.txt

# Define URLs and file names
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Check if request was successful (HTTP 200)
if [ "$response" -eq 200 ]; then
  echo "✅ Successfully fetched Pikachu data and saved to $OUTPUT_FILE"
else
  echo "❌ Failed to fetch data. HTTP status: $response" | tee -a "$ERROR_FILE"
  # Remove incomplete JSON if any
  rm -f "$OUTPUT_FILE"
fi
